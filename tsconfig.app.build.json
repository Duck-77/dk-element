{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/index.ts", "src/components/**/*", "src/hooks/**/*"],
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ESNext",

        "jsx": "preserve",
        "jsxImportSource": "vue",
        "allowImportingTsExtensions": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },

        "types": [""],
    }
}
