{
    "name": "@duck-77/dk-ui",
    "description": "一个仿照 Element Plus 实现的 Vue3 + Typescript 组件库项目",
    "version": "1.0.4",
    "type": "module",
    "author": {
        "name": "qyq (duck-77)",
        "url": "https://github.com/Duck-77"
    },
    "keywords": [
        "UI",
        "Component",
        "Vue3"
    ],
    "homepage": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/Duck-77/dk-ui"
    },
    "sideEffects": [
        "./dist/index.css"
    ],
    "files": [
        "dist",
        "README.md"
    ],
    "main": "index.js",
    "module": "dist/es/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "default": "./dist/es/index.js",
                "types": "./dist/index.d.ts"
            },
            "require": {
                "default": "./dist/umd/index.umd.cjs",
                "types": "./dist/index.d.ts"
            }
        },
        "./dist/": {
            "import": "./dist/",
            "require": "./dist/"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build-only && npm run build-organize",
        "preview": "vite preview",
        "build-only": "run-p build-es build-umd ",
        "build-es": "vite build --config ./build/vite.es.config.ts",
        "build-umd": "vite build --config ./build/vite.umd.config.ts",
        "build-organize": "node ./build/organizer.js",
        "type-check": "vue-tsc --build --force",
        "lint": "eslint . --fix",
        "commit": "git cz",
        "test": "vitest",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.6.0",
        "@fortawesome/free-regular-svg-icons": "^6.6.0",
        "@fortawesome/free-solid-svg-icons": "^6.6.0",
        "@fortawesome/vue-fontawesome": "^3.0.8",
        "@popperjs/core": "^2.11.8",
        "axios": "^1.7.7",
        "lodash-es": "^4.17.21"
    },
    "peerDependencies": {
        "vue": "^3.5.12"
    },
    "devDependencies": {
        "@tsconfig/node20": "^20.1.4",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^20.17.0",
        "@vitejs/plugin-vue": "^5.1.4",
        "@vitejs/plugin-vue-jsx": "^4.1.0",
        "@vitepress-demo-preview/component": "^2.3.2",
        "@vitepress-demo-preview/plugin": "^1.2.3",
        "@vue/eslint-config-typescript": "^14.1.1",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.5.1",
        "async-validator": "^4.2.5",
        "eslint": "^9.13.0",
        "eslint-plugin-vue": "^9.29.0",
        "git-cz": "^4.9.0",
        "jsdom": "^25.0.1",
        "move-file-cli": "^3.0.0",
        "npm-run-all2": "^7.0.1",
        "postcss-advanced-variables": "^5.0.0",
        "postcss-color-mix": "^1.1.0",
        "postcss-each": "^1.1.0",
        "postcss-each-variables": "^0.3.0",
        "postcss-for": "^2.1.1",
        "postcss-nested": "^7.0.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.4.2",
        "vite": "^5.4.10",
        "vite-plugin-dts": "^4.3.0",
        "vitepress": "^1.5.0",
        "vitest": "^2.1.4",
        "vue": "^3.5.12",
        "vue-tsc": "^2.1.6"
    },
    "config": {
        "commitizen": {
            "path": "git-cz"
        }
    }
}
