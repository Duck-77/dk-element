{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "__test__/**/*.tsx", "docs/**/*"],
    // "exclude": ["./__test__/**/*"],
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ESNext",

        "jsx": "preserve",
        "jsxImportSource": "vue",
        "allowImportingTsExtensions": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },

        "types": [""]
    }
}
